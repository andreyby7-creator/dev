    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@salespot/shared": "workspace:*",
    "@sentry/nextjs": "^8.32.0",
    "@supabase/supabase-js": "^2.57.2",
    "@tanstack/react-query": "5.56.2",
    "clsx": "^2.0.0",
    "dotenv": "16.4.5",
    "next": "15.5.2",
    "next-auth": "4.24.11",
    "prom-client": "15.1.0",
