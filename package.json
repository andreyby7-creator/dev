{
  "name": "salespot-by",
  "version": "1.0.0",
  "description": "SaleSpot BY - SaaS платформа для карт лояльности и маркетинговых кампаний",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter=./apps/* run dev",
    "dev:parallel": "pnpm --parallel --filter=./apps/* run dev",
    "build": "pnpm --filter=./apps/* run build",
    "build:parallel": "pnpm --parallel --filter=./apps/* run build",
    "start": "pnpm --filter=./apps/* run start",
    "start:api": "pnpm --filter=./apps/api run start:prod",
    "start:web": "pnpm --filter=./apps/web run start",
    "lint": "pnpm --filter=./apps/* run lint",
    "lint:fix": "pnpm --filter=./apps/* run lint:fix",
    "lint:watch": "pnpm --filter=./apps/* run lint:watch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --filter=./apps/* run type-check",
    "type-check:watch": "pnpm --filter=./apps/* run type-check:watch",
    "test": "pnpm --filter=./apps/* run test",
    "test:clean": "BLOCK_ALL_LOGS=true pnpm --filter=./apps/* run test",
    "test:debug": "pnpm --filter=./apps/* run test --verbose",
    "test:e2e": "pnpm --filter=./apps/* run test:e2e",
    "test:watch": "pnpm --filter=./apps/* run test:watch",
    "clean": "pnpm --filter=./apps/* run clean",
    "ci": "pnpm run lint && pnpm run format:check && pnpm run type-check && pnpm run build",
    "ci:fix": "pnpm run lint:fix && pnpm run format",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run format:check",
    "validate:fix": "pnpm run lint:fix && pnpm run format",
    "validate:watch": "pnpm run type-check:watch & pnpm run lint:watch",
    "quality": "pnpm run validate && pnpm run test",
    "quality:complexity": "pnpm --filter=./apps/* run lint:complexity",
    "quality:full": "pnpm run quality && pnpm run quality:complexity",
    "clean-code": "pnpm run lint:fix && pnpm run format && pnpm run type-check",
    "spell-check": "cspell \"**/*.{md,ts,tsx,js,jsx}\" --config cspell.config.json",
    "spell-check:fix": "cspell \"**/*.{md,ts,tsx,js,jsx}\" --config cspell.config.json --no-progress --no-summary --no-files",
    "check": "./scripts/check-quality.sh",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit --project tsconfig.json",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "^9.34.0",
    "@opentelemetry/context-async-hooks": "^1.30.1",
    "@opentelemetry/core": "^1.30.1",
    "@opentelemetry/instrumentation": "^0.57.2",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "commitizen": "4.3.1",
    "cspell": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.6",
    "msw": "^2.11.1",
    "prettier": "^3.6.2",
    "prisma": "6.15.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.15.0",
    "@supabase/supabase-js": "^2.57.2",
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "postgres": "^3.4.7",
    "zod": "^4.1.5"
  },
  "pnpm": {
    "overrides": {
      "micromatch@<4.0.8": ">=4.0.8",
      "esbuild@<=0.24.2": ">=0.25.0",
      "on-headers@<1.1.0": ">=1.1.0",
      "tmp@<=0.2.3": ">=0.2.4"
    },
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "@sentry/cli",
      "@swc/core",
      "esbuild",
      "msw",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ]
  }
}
