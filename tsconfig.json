{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "apps/*/src/**/*", "packages/*/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
